
<%- include("header") -%>
<div class="box" id="topic">
    <h1>To do list V1 with EJS</h1>
</div>

<div class="box" id="heading">
    <h2><%= listTitle %></h2>
</div>

<div class="box">
    <% for(var i=0; i<newListItems.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= newListItems[i] %></p>
        </div>
    <% } %>

    <form action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="submit" value="<%= listTitle%>">+</button>
    </form>
</div>

<%- include("footer") -%>
